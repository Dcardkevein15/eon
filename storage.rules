
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files for simplicity.
    // In a production app, you might want to restrict this further.
    match /{allPaths=**} {
      allow read;
    }
    
    // Allow authenticated users to write to their own `generated-images` folder.
    match /generated-images/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload their application documents.
    match /applications/{userId}/{allPaths=**} {
       allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
