rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users can only read/write their own data
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // Chats and their subcollections
      match /chats/{chatId} {
        allow read, write: if isOwner(userId);

        match /messages/{messageId} {
          allow read, write: if isOwner(userId);
        }
      }

      // Chatbot state
      match /chatbotState/{stateId} {
          allow read, write: if isOwner(userId);
      }
      
      // User Profile
      match /profile/{profileId} {
          allow read, write: if isOwner(userId);
      }

      // Emotional Gym Sessions
      match /gymSessions/{sessionId} {
        allow read, create, update: if isOwner(userId);

        // Messages within a gym session
        match /messages/{messageId} {
          allow read, create: if isOwner(userId);
        }
      }
    }

    // Publicly readable collections
    match /promptSuggestions/{suggestionId} {
      allow read: if true;
      allow write: if false; // Read-only
    }

    match /therapists/{therapistId} {
      allow read: if true;
      allow write: if false; // For now, managed via placeholder data
    }
    
    match /simulationScenarios/{scenarioId} {
      allow read: if true;
      allow write: if false; // Read-only
    }
  }
}
