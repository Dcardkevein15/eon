
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    //----------------------------------------------------------------//
    //                         USER DATA                              //
    //----------------------------------------------------------------//

    // User-specific data is only accessible by the owner.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Dream interpretations are private to the user.
    match /users/{userId}/dreams/{dreamId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Torah Code history is private to the user.
    match /users/{userId}/torahCodeHistory/{recordId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    //----------------------------------------------------------------//
    //                   MARKETPLACE & PROFESSIONALS                  //
    //----------------------------------------------------------------//

    // Therapist profiles are public to read, but only admins can write.
    match /therapists/{therapistId} {
      allow get, list: if true;
      allow write: if request.auth != null && request.auth.token.roles.hasAny(['admin']);
    }

    // Applications can be created by the applicant, and read by the applicant or an admin.
    // Only admins can update (approve/reject) applications.
    match /therapistApplications/{applicationId} {
      allow get: if request.auth != null && (resource.data.userId == request.auth.uid || request.auth.token.roles.hasAny(['admin']));
      allow list: if request.auth != null && request.auth.token.roles.hasAny(['admin']);
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && request.auth.token.roles.hasAny(['admin']);
      allow delete: if false;
    }
    
    //----------------------------------------------------------------//
    //                         BLOG & ARTICLES                        //
    //----------------------------------------------------------------//

    // Articles can be read by any authenticated user.
    // They can be created by any authenticated user (via the credit system).
    // They can only be updated/deleted by admins.
    match /articles/{articleSlug} {
      allow get, list: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.token.roles.hasAny(['admin']);
    }

    // Suggested article titles can be read by any authenticated user.
    // Writing should only be done by server-side logic (e.g. Cloud Functions or server actions).
    // For this app, we will trust the server actions and allow any authenticated user to write,
    // assuming no direct client-side writes are performed on this collection.
    match /suggestedArticleTitles/{titleId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Simplified for server action trust
    }
  }
}
